<table class="prices" cellpadding="0" cellspacing="0">
    <thead>
    <tr>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td align="center" colspan="2" style="background-color: #8AB7DD; font-weight: normal; letter-spacing: 2px; color: #000; padding: 3px 5px !important; border-top: 1px solid #666;">1 - 4 PAXS</td>
        <td>&nbsp;</td>
        <td align="center" colspan="2" style="background-color: #8AB7DD; font-weight: normal; letter-spacing: 2px; color: #000; padding: 3px 5px !important; border-top: 1px solid #666;">5 -10 PAXS</td>
    </tr>
    <tr>
        <td>Cancun Airport to ...</td>
        <td style="width:20px;">&nbsp;</td>
        <td align="center">round trip</td>
        <td align="center">one way</td>
        <td style="width:20px;">&nbsp;</td>
        <td align="center">round trip</td>
        <td align="center">one way</td>
    </tr>
    </thead>
    <tbody>
    {% for id, destination in destinations %}
        <tr>
            <td>{{ destination.title }}</td>
            <td>&nbsp;</td>
            <td align="right">{% if prices[id]['1-4']['RT'] is defined %}<a href="{{ path('reservation_specific', {type:'RT', pax:'1-4', destination: destination.slug}) }}">$ {{ prices[id]['1-4']['RT'] }} USD</a>{% else %}n/a{% endif %}</td>
            <td align="right">{% if prices[id]['1-4']['OW'] is defined %}<a href="{{ path('reservation_specific', {type:'OW', pax:'1-4', destination: destination.slug}) }}">$ {{ prices[id]['1-4']['OW'] }} USD</a>{% else %}n/a{% endif %}</td>
            <td>&nbsp;</td>
            <td align="right">{% if prices[id]['5-10']['RT'] is defined %}<a href="{{ path('reservation_specific', {type:'RT', pax:'5-10', destination: destination.slug}) }}">$ {{ prices[id]['5-10']['RT'] }} USD</a>{% else %}n/a{% endif %}</td>
            <td align="right">{% if prices[id]['5-10']['OW'] is defined %}<a href="{{ path('reservation_specific', {type:'OW', pax:'5-10', destination: destination.slug}) }}">$ {{ prices[id]['5-10']['OW'] }} USD</a>{% else %}n/a{% endif %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>



